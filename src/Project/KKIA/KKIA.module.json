{
  "namespace": "Project.KKIA",
  "references": [ "Foundation.*", "Feature.*" ],
  "items": {
    "includes": [
      {
        "name": "module",
        "path": "/sitecore/system/Settings/Project/KKIA",
        "allowedPushOperations": "CreateUpdateAndDelete"
      },
      {
        "name": "templates",
        "path": "/sitecore/templates/Project/KKIA",
        "allowedPushOperations": "CreateUpdateAndDelete"
      },
      {
        "name": "branchTemplates",
        "path": "/sitecore/templates/Branches/Project/KKIA",
        "allowedPushOperations": "CreateUpdateAndDelete"
      },
      {
        "name": "media",
        "path": "/sitecore/Media Library/Project/KKIA",
        "allowedPushOperations": "CreateUpdateAndDelete",
        "rules": [
          {
            "path": "/Shared",
            "scope": "SingleItem",
            "allowedPushOperations": "CreateOnly"
          },
          {
            "path": "/KKIA",
            "scope": "SingleItem",
            "allowedPushOperations": "CreateOnly"
          }
        ]
      },
      {
        "name": "layouts",
        "path": "/sitecore/layout/Layouts/Foundation",
        "allowedPushOperations": "CreateUpdateAndDelete"
      },

      {
        "name": "renderings",
        "path": "/sitecore/layout/Renderings/Project/KKIA",
        "allowedPushOperations": "CreateUpdateAndDelete"
      },
      {
        "name": "placeholders",
        "path": "/sitecore/layout/Placeholder Settings/Project/KKIA",
        "allowedPushOperations": "CreateUpdateAndDelete"
      },
      {
        "name": "apikey",
        "path": "/sitecore/system/Settings/Services/API Keys/kkia",
        "allowedPushOperations": "CreateUpdateAndDelete"
      },
      {
        "name": "tenantRoot",
        "path": "/sitecore/content/KKIA",
        "scope": "SingleItem",
        "allowedPushOperations": "CreateAndUpdate"
      },
      {
        "name": "content",
        "path": "/sitecore/content/KKIA/KKIA",
        "rules": [
          {
            "path": "/home",
            "scope": "SingleItem",
            "allowedPushOperations": "CreateOnly"
          },
          {
            "path": "/Media",
            "scope": "SingleItem",
            "allowedPushOperations": "CreateAndUpdate"
          },
          {
            "path": "/Data",
            "scope": "ItemAndChildren",
            "allowedPushOperations": "CreateAndUpdate"
          },
          {
            "path": "/Dictionary",
            "scope": "ItemAndDescendants",
            "allowedPushOperations": "CreateOnly"
          },
          {
            "path": "/Presentation",
            "scope": "ItemAndDescendants",
            "allowedPushOperations": "CreateUpdateAndDelete"
          },
          {
            "path": "/Settings/Site Grouping",
            "scope": "ItemAndDescendants",
            "allowedPushOperations": "CreateOnly"
          },
          {
            "path": "/Settings",
            "scope": "ItemAndChildren",
            "allowedPushOperations": "CreateAndUpdate"
          },
          {
            "path": "*",
            "scope": "Ignored"
          }
        ]
      }
    ]
  }
}
